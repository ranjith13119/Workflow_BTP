<mvc:View controllerName="trail.workflowuimodule.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <App id="app">
        <pages>
            <Page
                showHeader="false"
                showFooter="false"
            >
                <content>
                    <form:SimpleForm
                        id="request-information-form"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        singleContainerFullSize="false"
                    >
                        <form:content>
                            <core:Title
                                id="vacation-timerange-heading"
                                text="Request for Shift Swap"
                            />
                            <Label
                                id="Date-label"
                                text="Date"
                                labelFor="Date-field"
                            />
                            <DatePicker
                                value="{context>/Date}"
                                type="sap.ui.model.type.Date"
                                editable="false"
                            />
                            <Label
                                id="employee-name-label"
                                text="Employee Name"
                                labelFor="employee-name-field"
                            />
                            <Input
                                id="employee-name-field"
                                value="{context>/EmployeeName}"
                                editable="false"
                            />
                            <Label
                                id="assigned-shift-label"
                                text="Assigned Shift"
                                labelFor="assigned-shift-label"
                            />
                            <Input
                                id="assigned-shift-field"
                                value="{context>/AssignedShift}"
                                editable="false"
                            />
                            <Label
                                id="requesting-shift-label"
                                text="Requesting Shift"
                                labelFor="requesting-shift-field"
                            />
                            <Input
                                id="requesting-shift-field"
                                value="{context>/RequestingShift}"
                                editable="false"
                            />
                        </form:content>
                    </form:SimpleForm>
                    <html:hr />
                    <FlexBox
                        id="comment-wrapper"
                        direction="Column"
                        class="sapUiSmallMargin"
                        width="auto"
                    >
                        <CheckBox
                            id="Ack"
                            text="I acknowledge"
                        />
                        <Label
                            id="comment-label"
                            text="Comment"
                        />
                        <TextArea
                            id="comment-field"
                            showExceededText="true"
                            maxLength="1000"
                            width="100%"
                            height="120px"
                            value="{context>/comment}"
                        />
                    </FlexBox>
                </content>
            </Page>
        </pages>     
    </App>
</mvc:View>
